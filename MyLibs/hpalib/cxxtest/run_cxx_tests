CXX=c++
LIST=$(ls cctest*.cc)
CXXFLAGS=$(hpaxxconf -c)
LDFLAGS=$(hpaxxconf -l)
DEF_OUT="./a.out"

echo "Compiling and linking with:  $CXX $CXXFLAGS source_file $LDFLAGS"
echo "                    ***     ***     ***"
for SRC in $LIST
do
	$CXX $CXXFLAGS $SRC $LDFLAGS
	if test $? -eq 0
	then
		echo "$SRC successfully compiled and linked"
		./a.out
	else
		echo "Error occurred while dealing with $SRC"
	fi
done
rm $DEF_OUT
